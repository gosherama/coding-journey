<h2>Add a comment:</h2> 
<%= form_for([@post, @post.comments.build] ) do |f| %>   
<div class="form-group">
  <%= f.label :commenter %><br> 
  <%= f.text_field :commenter %> 
</div> 
<div class="form-group">
  <%= f.label :body %><br> 
  <%= f.text_area :body, class:"form-control" %> 
</div>
<div class="form-group">
  <%= f.submit class:"btn btn-primary" %> 
</div> 
<% end %> 