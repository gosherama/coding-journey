<p id="notice"><%= notice %></p>

<h1>Posts Administration</h1>

<div id="tag_cloud">
  <% tag_cloud Post.tag_counts, %w{s m l} do |tag, css_class| %>
  <%= link_to tag.name, tag_path(tag.name), class:css_class %>
  <% end %>
</div>

<%= link_to 'New Post', new_post_path, class:"btn btn-primary" %>
<br>
<br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Tags</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(',') %></td>
        <td><%= post.title %></td>
        <td><%= markdown post.body %></td>
        <td><%= link_to 'Show', post, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


