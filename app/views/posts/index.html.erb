<div id="tag_cloud">
  <% tag_cloud Post.tag_counts, %W[sm me lg xl] do |tag, css_class| %>
  <%= link_to tag.name.upcase , tag_path(tag.name), class: css_class %>
  <% end %>
</div>
<br>
 <% if user_signed_in? %>
    <%= link_to 'New Post', new_post_path, class:"btn btn-primary" %>
  <% end %>
<br>

<br>
<br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>Tags</th>
      <th>Title</th>
      <th>Content</th>
      <th>Created</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(' ').upcase %></td>
        <td><%= post.title %></td>
        <td id="index-post-content"><%= markdown truncate(post.body,length: 100) %></td>
        <td><%= post.created_at.strftime('%d/%m/%Y') %></td>
        <td><%= link_to 'Show', post, class:"btn btn-primary" %></td>
          <% if user_signed_in? %>
            <% if current_user.id === post.user_id %>
              <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-warning" %></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
            <% end %>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


